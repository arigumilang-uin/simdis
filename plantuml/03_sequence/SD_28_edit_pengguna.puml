@startuml SD_28_Edit_Pengguna
' ============================================================================
' SEQUENCE DIAGRAM - EDIT PENGGUNA
' ============================================================================
' Use Case: Kelola Pengguna
' Aktor: Operator Sekolah
' ============================================================================

skinparam backgroundColor #FEFEFE
skinparam shadowing false
skinparam defaultFontName "Segoe UI"
skinparam defaultFontSize 10

skinparam sequence {
    ArrowColor #455A64
    ArrowFontColor #37474F
    LifeLineBorderColor #78909C
    LifeLineBackgroundColor #ECEFF1
    ParticipantBorderColor #37474F
    ParticipantBackgroundColor #FFFFFF
    ActorBorderColor #1976D2
    ActorBackgroundColor #E3F2FD
    BoxBorderColor #9E9E9E
    BoxBackgroundColor #FAFAFA
}

autonumber

title **SD-28: Edit Pengguna**

actor "Operator\nSekolah" as OPERATOR

box "Application Layer" #E8F5E9
    participant "UserController" as UC
end box

box "Data Layer" #FFF3E0
    participant "User Model" as UM
    participant "Role Model" as RM
    database "MySQL" as DB
end box

== Tampilkan Form Edit ==

OPERATOR -> UC : GET /users/id/edit
activate UC

UC -> UM : findOrFail(id)
activate UM
UM -> DB : SELECT * FROM users WHERE id = ?
DB --> UM : User data
UM --> UC : User object
deactivate UM

UC -> RM : all()
activate RM
RM -> DB : SELECT * FROM roles
DB --> RM : Roles data
RM --> UC : Daftar Roles
deactivate RM

UC --> OPERATOR : Form edit (pre-filled):\n- Nama, Username, Email\n- Role, No. HP, Status Aktif
deactivate UC

== Proses Update ==

OPERATOR -> UC : PUT /users/id\n(nama, email, role_id,\nphone, is_active)
activate UC

UC -> UC : validate()

UC -> UM : findOrFail(id)->update(data)
activate UM
UM -> DB : UPDATE users SET\nnama = ?, email = ?,\nrole_id = ?, phone = ?,\nis_active = ?
DB --> UM : Updated
UM --> UC : Success
deactivate UM

UC --> OPERATOR : Redirect /users\nFlash: "Pengguna berhasil diperbarui"
deactivate UC

@enduml
